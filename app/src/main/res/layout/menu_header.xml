<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#F3F2EE">

    <TextView
        android:id="@+id/menu_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Launchpad for Lifelong Learning"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diploma Net"
        android:fontFamily="@font/baloo"
        android:textSize="25sp"
        android:layout_above="@+id/menu_slogan"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:src="@drawable/diploma_net_logo"
        android:layout_above="@id/app_name"/>



</RelativeLayout>